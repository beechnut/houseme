<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label      :name %>
      <%= f.text_field :name %>

      <%= f.label      :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :receive_text, "I want to receive text alerts for new housing." %>
      <%= f.check_box :receive_text, checked: false %>

      <%= f.label :mobile %>
      <%= f.text_field :mobile %>

      <%= f.label :carrier %>
      <%= collection_select(:user, :carrier_id, Carrier.all, :id, :name, { :include_blank => true }) %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>